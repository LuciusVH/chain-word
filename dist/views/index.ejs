<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Word Chain Game</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css" />
    <script src="https://cdn.socket.io/4.4.0/socket.io.min.js" integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj" crossorigin="anonymous"></script>
  </head>

  <body>

    <div id="game-canvas">
      <h1>Word Chain Game</h1>
      <ul id="players_list">
        <!-- Players list goes here -->
      </ul>
      <div id="game-wrapper">
        <div id="word">hello! ✌️</div>
        <form id="join" class="form">
          <label for="newPlayer"></label>
          <input type="text" id="newPlayer" name="newPlayer" placeholder="What's your name? :)" required autofocus>
          <button>Join the game</button>
        </form>
        <form id="game" class="form">
          <label for="userInput"></label>
          <input type="text" id="userInput" name="userInput" required autofocus disabled>
          <button type="submit" id="submit">Submit</button> <button type="button" id="forfeit">Forfeit</button>
        </form>
      </div>
    </div>

    <!-- JS SCRIPTS -->
    <script src="/js/bundle.js"></script>
  </body>

</html>